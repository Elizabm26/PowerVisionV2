<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_inicio">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtDatos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <TextView
            android:id="@+id/idintensidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:text="Intensidad"
            android:gravity="center"
            android:textSize="35dp"
            android:textStyle="bold"/>
    <TextView
        android:id="@+id/idoculto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Intensidad"
        android:visibility= "gone"
        android:textSize="35dp"
        android:textStyle="bold"/>

        <com.ekn.gruzer.gaugelibrary.ArcGauge
            android:id="@+id/Itensidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idintensidad"
            android:layout_marginStart="0dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="450dp" />
    <TextView
        android:id="@+id/idcorriente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Corriente"
        android:textSize="35dp"
        android:textStyle="bold"/>

    <com.ekn.gruzer.gaugelibrary.ArcGauge
        android:id="@+id/Corriente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="175dp"/>


</FrameLayout>